<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:gravity="center"
    tools:context="com.example.mac.prmsdemo.MainActivity">

    <!--左半部-->
    <GridLayout
        android:id="@+id/GridLay1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:columnCount="2"
        android:scaleType="centerCrop"
        android:layout_marginTop="70dp"
        android:layout_marginLeft="10dp"
        android:layout_weight=".50">

        <ImageButton
            android:id="@+id/imgBtnOrder"
            android:layout_width="220dp"
            android:layout_height="150dp"
            android:layout_weight="0.5"
            android:scaleType="centerCrop"
            app:srcCompat="@drawable/main_menu_order_icon" />

        <ImageButton
            android:id="@+id/imgBtnService"
            android:layout_width="220dp"
            android:layout_height="150dp"
            android:layout_weight="0.5"
            android:scaleType="centerCrop"
            app:srcCompat="@drawable/main_menu_service_icon" />

        <ImageButton
            android:id="@+id/imgBtmPunch"
            android:layout_width="220dp"
            android:layout_height="150dp"
            android:layout_marginBottom="@id/imgBtnOrder"
            android:layout_weight="1"
            android:scaleType="centerCrop"
            android:layout_columnSpan="1"
            app:srcCompat="@drawable/main_menu_punch_icon" />

        <ImageButton
            android:id="@+id/imgBtnBlank"
            android:layout_width="220dp"
            android:layout_height="150dp"
            android:layout_marginBottom="@id/imgBtnOrder"
            android:layout_weight="1"
            android:scaleType="centerCrop"
            android:layout_columnSpan="1"
            app:srcCompat="@drawable/main_menu_blank_icon" />

    </GridLayout>

    <!--右半部-->
    <LinearLayout
        android:id="@+id/lineLay1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignTop="@+id/linearLayout"
        android:layout_marginRight="10dp"
        android:layout_weight=".50"
        android:columnCount="2"
        android:orientation="vertical"
        android:scaleType="centerCrop">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="78dp"
            android:layout_gravity="right|center_horizontal"
            android:orientation="horizontal"
            android:scaleType="centerCrop">

            <ImageButton
                android:id="@+id/imageButton6"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_gravity="right|center_horizontal"
                android:layout_marginLeft="300dp"
                android:baselineAlignBottom="true"
                android:scaleType="centerCrop"

                app:srcCompat="@drawable/main_menu_info_icon" />

            <ImageButton
                android:id="@+id/imageButton7"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_gravity="right|center_horizontal"
                android:scaleType="centerCrop"
                app:srcCompat="@drawable/main_menu_setting_icon" />

        </LinearLayout>

        <GridLayout
            android:id="@+id/GridLay2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right|center_horizontal"
            android:layout_weight=".2"
            android:columnCount="2"
            android:orientation="horizontal"
            android:layout_marginTop="25dp"
            android:scaleType="centerCrop">


            <ImageButton
                android:id="@+id/imgBtnMangFood"
                android:layout_width="220dp"
                android:layout_height="150dp"
                android:layout_weight="0.5"
                android:scaleType="centerCrop"
                app:srcCompat="@drawable/main_menu_manqgefood_icon" />

            <ImageButton
                android:id="@+id/imageButton10"
                android:layout_width="220dp"
                android:layout_height="150dp"
                android:layout_weight="0.5"
                android:scaleType="centerCrop"
                app:srcCompat="@drawable/main_menu_managestaff_icon" />

            <ImageButton
                android:id="@+id/imageButton11"
                android:layout_width="220dp"
                android:layout_height="150dp"
                android:layout_weight="0.5"
                android:scaleType="centerCrop"
                app:srcCompat="@drawable/main_menu_managematerials_icon" />

            <ImageButton
                android:id="@+id/imageButton12"
                android:layout_width="220dp"
                android:layout_height="150dp"
                android:layout_weight="0.5"
                android:scaleType="centerCrop"
                app:srcCompat="@drawable/main_menu_manqgedeal_icon" />


        </GridLayout>


    </LinearLayout>

</LinearLayout>
