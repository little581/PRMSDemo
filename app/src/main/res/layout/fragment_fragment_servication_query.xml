<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.mac.prmsdemo.fragment_servication">

    <!-- TODO: Update blank fragment layout -->

    <LinearLayout
        android:id="@+id/linearLayout1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/customborder"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="20dp">

            <ImageView
                android:id="@+id/imageSearch"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/ic_search" />

            <TextView
                android:id="@+id/textView5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@id/imageSearch"
                android:text="查詢：" />

        </LinearLayout>

        <TableLayout
            android:id="@+id/tablelayout1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.2"
            android:baselineAligned="true"
            android:padding="10dip">

            <TableRow
                android:layout_margin="0.5dp"
                android:background="@drawable/shape_top_corner_no_bottom_line">

                <TextView
                    android:layout_width="30dp"
                    android:layout_column="1"
                    android:layout_margin="0.5dp"
                    android:layout_marginRight="10dip"
                    android:layout_weight="0.2"
                    android:background="#FFFFFF"
                    android:gravity="center_horizontal"
                    android:padding="10dip"
                    android:text="@string/txtServNo" />

                <TextView
                    android:layout_width="30dp"
                    android:layout_column="0"
                    android:layout_weight="0.8"
                    android:gravity="center_horizontal"
                    android:text="@string/txtServName" />

                <TextView
                    android:layout_width="30dp"
                    android:layout_column="1"
                    android:layout_weight="1"
                    android:gravity="center_horizontal"
                    android:text="@string/txtServTel" />

                <TextView
                    android:layout_width="30dp"
                    android:layout_column="1"
                    android:layout_weight="1"
                    android:gravity="center_horizontal"
                    android:text="@string/txtServTime" />

                <TextView
                    android:layout_width="30dp"
                    android:layout_column="1"
                    android:layout_weight="0.8"
                    android:gravity="center_horizontal"
                    android:text="@string/txtServNum" />

                <TextView
                    android:layout_width="30dp"
                    android:layout_column="2"
                    android:layout_weight="1"
                    android:gravity="center_horizontal"
                    android:text="@string/txtServNote" />

                <TextView
                    android:layout_width="30dp"
                    android:layout_column="1"
                    android:layout_weight="1"
                    android:gravity="center_horizontal"
                    android:text="@string/txtServState"></TextView>

                <TextView
                    android:id="@+id/textView4"
                    android:layout_width="30dp"
                    android:layout_column="1"
                    android:layout_marginRight="10dip"
                    android:layout_weight="0.2"
                    android:gravity="center_horizontal"
                    android:padding="10dip"
                    android:text="@string/txtServBtnRevise" />

            </TableRow>

            <TableRow
                android:layout_margin="0.5dp"
                android:background="@drawable/shape_no_corner_without_bottom"
                android:padding="10dip">

                <TextView
                    android:layout_width="30dp"
                    android:layout_column="1"
                    android:layout_weight="0.2"
                    android:gravity="center_horizontal"
                    android:text="1" />

                <TextView
                    android:layout_width="30dp"
                    android:layout_column="0"
                    android:layout_weight="0.8"
                    android:gravity="center_horizontal"
                    android:text="Peter" />

                <TextView
                    android:layout_width="30dp"
                    android:layout_column="1"
                    android:layout_weight="1"
                    android:gravity="center_horizontal"
                    android:text="0912345678" />

                <TextView
                    android:layout_width="30dp"
                    android:layout_column="0"
                    android:layout_weight="1"
                    android:gravity="center_horizontal"
                    android:text="上午9點15分 ~ 上午9點30分" />

                <TextView
                    android:layout_width="30dp"
                    android:layout_column="1"
                    android:layout_weight="0.8"
                    android:gravity="center_horizontal"
                    android:text="3人2寵" />

                <TextView
                    android:layout_width="30dp"
                    android:layout_column="2"
                    android:layout_weight="1"
                    android:gravity="center_horizontal"
                    android:text="1大型犬 2兒童" />

                <TextView
                    android:layout_width="30dp"
                    android:layout_column="1"
                    android:layout_weight="1"
                    android:background="@color/colorAccent"
                    android:gravity="center_horizontal"
                    android:text="過期" />

                <Button
                    android:id="@+id/button"
                    android:layout_width="30dp"
                    android:layout_column="1"
                    android:layout_margin="0.5dp"
                    android:layout_marginTop="0.5dp"
                    android:layout_weight="0.15"
                    android:gravity="center_vertical"
                    android:text="@string/txtServBtnRevise" />
            </TableRow>

            <TableRow
                android:layout_margin="0.5dp"
                android:background="@drawable/shape_no_corner_without_bottom"
                android:padding="10dip">

                <TextView
                    android:layout_width="30dp"
                    android:layout_column="1"
                    android:layout_weight="0.2"
                    android:gravity="center_horizontal"
                    android:text="2" />

                <TextView
                    android:layout_width="30dp"
                    android:layout_column="0"
                    android:layout_weight="0.8"
                    android:gravity="center_horizontal"
                    android:text="Sam" />

                <TextView
                    android:layout_width="30dp"
                    android:layout_column="1"
                    android:layout_weight="1"
                    android:gravity="center_horizontal"
                    android:text="0912345679" />

                <TextView
                    android:layout_width="30dp"
                    android:layout_column="0"
                    android:layout_weight="1"
                    android:gravity="center_horizontal"
                    android:text="上午10點00分 ~ 上午10點15分" />

                <TextView
                    android:layout_width="30dp"
                    android:layout_column="1"
                    android:layout_weight="0.8"
                    android:gravity="center_horizontal"
                    android:text="2人1寵" />

                <TextView
                    android:layout_width="30dp"
                    android:layout_column="2"
                    android:layout_weight="1"
                    android:gravity="center_horizontal"
                    android:text="1大型犬" />

                <TextView
                    android:layout_width="30dp"
                    android:layout_column="1"
                    android:layout_weight="1"
                    android:background="@color/coloroDone"
                    android:gravity="center_horizontal"
                    android:text="已完成" />

                <Button
                    android:id="@+id/button2"
                    android:layout_width="30dp"
                    android:layout_column="1"
                    android:layout_margin="0.5dp"
                    android:layout_marginTop="0.5dp"
                    android:layout_weight="0.15"
                    android:gravity="center_vertical"
                    android:text="@string/txtServBtnRevise" />

            </TableRow>

            <TableRow
                android:layout_margin="0.5dp"
                android:background="@drawable/shape_no_corner_without_bottom"
                android:padding="10dip">

                <TextView
                    android:layout_width="30dp"
                    android:layout_column="1"
                    android:layout_weight="0.2"
                    android:gravity="center_horizontal"
                    android:text="3" />

                <TextView
                    android:layout_width="30dp"
                    android:layout_column="0"
                    android:layout_weight="0.8"
                    android:gravity="center_horizontal"
                    android:text="Mary" />

                <TextView
                    android:layout_width="30dp"
                    android:layout_column="1"
                    android:layout_weight="1"
                    android:gravity="center_horizontal"
                    android:text="0912345639" />

                <TextView
                    android:layout_width="30dp"
                    android:layout_column="0"
                    android:layout_weight="1"
                    android:gravity="center_horizontal"
                    android:text="上午11點30分 ~ 上午11點45分" />

                <TextView
                    android:layout_width="30dp"
                    android:layout_column="1"
                    android:layout_weight="0.8"
                    android:gravity="center_horizontal"
                    android:text="5人2寵" />

                <TextView
                    android:layout_width="30dp"
                    android:layout_column="2"
                    android:layout_weight="1"
                    android:gravity="center_horizontal"
                    android:text="無" />

                <TextView
                    android:layout_width="30dp"
                    android:layout_column="1"
                    android:layout_weight="1"
                    android:background="@color/colorService"
                    android:gravity="center_horizontal"
                    android:text="預約" />

                <Button
                    android:id="@+id/button"
                    android:layout_width="30dp"
                    android:layout_column="1"
                    android:layout_margin="0.5dp"
                    android:layout_marginTop="0.5dp"
                    android:layout_weight="0.15"
                    android:gravity="center_vertical"
                    android:text="@string/txtServBtnRevise" />

            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/shape_bottom_corner_no_top_line"
                android:padding="10dip" />
        </TableLayout>
    </LinearLayout>

</FrameLayout>
